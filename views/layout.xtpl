<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>后台管理系统</title>
	<link rel="stylesheet" href="/static/bootstrap/dist/css/bootstrap.min.css">
	<link rel="stylesheet" href="/static/font-awesome/css/font-awesome.min.css">
	<link rel="stylesheet" href="/static/nprogress/nprogress.css">

	<link rel="stylesheet" href="/static/less/index.css">
	<!-- <script src="/static/less/dist/less.min.js"></script> -->
</head>
<body>
	
	<!-- 侧边栏 -->
	<div class="aside">
		<!-- 个人资料 -->
		<div class="profile">
			<!-- 头像 -->
			<div class="avatar img-circle">
				<img src="/static/avatar.jpg">
			</div>
			<h4>布头儿</h4>
		</div>
		<!-- 导航菜单 -->
		<div class="navs">
			<ul class="list-unstyled">
				<li>
					<a href="/">
						<i class="fa fa-home"></i>
						仪表盘
					</a>
				</li>
				<li>
					<a href="/users">
						<i class="fa fa-bell"></i>
						用户管理
					</a>
				</li>
				<li>
					<a href="/teacher">
						<i class="fa fa-bell"></i>
						讲师管理
					</a>
				</li>
				<li>
					<a href="javascript:;">
						<i class="fa fa-cog"></i>
						课程管理
						<i class="arrow fa fa-angle-right"></i>
					</a>
					<ul class="list-unstyled">
						<li>
							<a href="/course/create">
								 课程添加
							</a>
						</li>
						<li>
							<a href="/course/list">
								课程列表
							</a>
						</li>
						<li>
							<a href="/course/category">
								课程分类
							</a>
						</li>
						<li>
							<a href="/course/topic">
								课程专题
							</a>
						</li>
					</ul>
				</li>
				<li>
					<a href="/advert">
						<i class="fa fa-bell"></i>
						广告管理
					</a>
				</li>
				<li>
					<a href="javascript:;">
						<i class="fa fa-cog"></i>
						系统设置
						<i class="arrow fa fa-angle-right"></i>
					</a>
					<ul class="list-unstyled">
						<li>
							<a href="javascript:;">
								网站设置
							</a>
						</li>
						<li>
							<a href="javascript:;">
								 权限管理
							</a>
						</li>
					</ul>
				</li>
			</ul>
		</div>
	</div>
	<!-- 主体 -->
	<div class="main">
		<div class="container-fluid">
			<!-- 头部 -->
			<div class="header">
				<nav class="navbar navbar-custom">
					<div class="navbar-header">
						<a href="javascript:;" class="navbar-brand">
							<i class="fa fa-navicon"></i>
						</a>
					</div>
					<ul class="nav navbar-nav navbar-right">
						<li>
							<a href="javascript:;">
								<i class="fa fa-bell"></i>
								<span class="badge">8</span>
							</a>
						</li>
						<li>
							<a href="javascript:;">
								<i class="fa fa-sign-out"></i>
								退出
							</a>
						</li>
						<li>
							<a href="javascript:;">
								<i class="fa fa-tasks"></i>
							</a>
						</li>
					</ul>
				</nav>			
			</div>
			<!-- 主体 -->
			{{{block ('body')}}}
		</div>
	</div>
	<!-- 组件 -->
	{{{block ('widget')}}}
	<script src="/static/jquery/dist/jquery.min.js"></script>
	<script src="/static/bootstrap/dist/js/bootstrap.min.js"></script>
	<script src="/static/nprogress/nprogress.js"></script>
	<script>
		// 折叠效果
		$('.navs ul').prev('a').on('click', function () {
			$(this).next().slideToggle();
		});

		// 选中状态
		$('.navs a').each(function () {
			var _this = $(this),
				pathname = location.pathname,
				href = _this.attr('href').slice(1);

			if(pathname.lastIndexOf(href) == 1) {

				_this.addClass('active');
				_this.closest('ul').show();

				return false;
			}
		});

		// Ajax进度条
		$(document).ajaxStart(function () {
			NProgress.start();
		}).ajaxStop(function () {
			NProgress.done();
		});

	</script>
	{{{block ('script')}}}
</body>
</html>